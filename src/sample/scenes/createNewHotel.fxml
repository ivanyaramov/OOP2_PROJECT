<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>


<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<AnchorPane prefHeight="514.0" prefWidth="682.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.sceneControllers.CreateNewHotelController">
    <children>
        <Label text="Choose manager for your hotel" layoutX="25.0" layoutY="9.0" />
        <TableView fx:id="tbDataManagers" layoutX="25.0" layoutY="30.0" prefHeight="200.0" prefWidth="270.0">
            <columns>
                <TableColumn fx:id="managerUsername" prefWidth="100.0" text="Username" />
                <TableColumn fx:id="managerFullname" prefWidth="100.0" text="Fullname" />
            </columns>
        </TableView>
        <Label text="name of hotel" layoutX="505.0" layoutY="9.0"/>
        <TextField fx:id="nameOfHotel" layoutX="505.0" layoutY="40.0"/>
        <Label text="address of hotel" layoutX="505.0" layoutY="120.0"/>
        <TextField fx:id="addressOfHotel" layoutX="505.0" layoutY="150.0"/>
        <Label text="number of stars of hotel" layoutX="505.0" layoutY="220"/>
        <ComboBox value="Gender" fx:id="stars" layoutX="505.0" layoutY="250">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="1"/>
                    <String fx:value="2"/>
                    <String fx:value="3"/>
                    <String fx:value="4"/>
                    <String fx:value="5"/>
                </FXCollections>
            </items>
        </ComboBox>
        <Label text="Choose receptionists for your hotel" layoutX="25.0" layoutY="250.0" />
        <TableView fx:id="tbDataReceptionists" layoutX="25.0" layoutY="270.0" prefHeight="200.0" prefWidth="270.0">
            <columns>
                <TableColumn fx:id="receptionistUsername" prefWidth="100.0" text="Username" />
                <TableColumn fx:id="receptionistFullname" prefWidth="100.0" text="Fullname" />
            </columns>
        </TableView>
        <Button layoutX="60.0" layoutY="520.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="170.0" text="Create new Manager" onAction="#createNewManager" />
        <Button layoutX="511.0" layoutY="520.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="170.0" text="Create new Hotel" onAction="#createNewHotel" />
        <Button layoutX="511.0" layoutY="400.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="170.0" text="Create new Room" onAction="#createNewRoom" />
    </children>
</AnchorPane>
